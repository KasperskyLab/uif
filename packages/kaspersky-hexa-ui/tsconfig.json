{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "jsx": "react",
    "noImplicitAny": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "esm",
    "paths": {
      "@src/*": ["src/*"],
      "@design-system/*": ["design-system/*"],
      "@helpers/*": ["helpers/*"],
      "@sb/*": [".storybook/*"]
    }
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./design-system/**/*",
    "./helpers/**/*",
    "./docs",
    "./.storybook/**/*",
    "./screenshots/**/*",
    "/.changelog/scripts/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "esm"
  ],
  "files": ["fonts.d.ts"]
}
