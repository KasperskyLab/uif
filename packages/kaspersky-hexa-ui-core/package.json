{
  "name": "@kaspersky/hexa-ui-core",
  "version": "0.17.2",
  "description": "Tokens for Kaspersky Hexa UI Design system: colors, fonts and typography",
  "author": "AO Kaspersky Lab",
  "license": "Apache-2.0",
  "homepage": "https://github.com/KasperskyLab/uif#readme",
  "repository": "KasperskyLab/uif",
  "bugs": {
    "url": "https://github.com/KasperskyLab/uif/issues"
  },
  "module": "esm",
  "types": "index.d.ts",
  "tsConfig": "tsconfig.json",
  "sideEffects": false,
  "files": [
    "esm/**/*",
    "colors/**/*",
    "fonts/**/*",
    "typography/**/*",
    "index.d.ts",
    "index.js"
  ],
  "exports": {
    "./*": {
      "import": "./esm/*/index.js",
      "require": "./*/index.js"
    },
    "./colors/css/*": {
      "import": "./esm/colors/css/*.js",
      "require": "./colors/css/*.js"
    },
    "./colors/tokens/components/*": {
      "import": "./esm/colors/tokens/components/*.js",
      "require": "./colors/tokens/components/*.js"
    }
  },
  "scripts": {
    "test": "npm run lint && jest --colors",
    "prepublishOnly": "npm run build",
    "build": "rollup -c --bundleConfigAsCjs",
    "release": "export release=true; npm run build",
    "storybook-hexa-ui": "gulp swapTokensFiles && gulp swapTokensFilesPixso && npm run update-colors && npm run release && (cd ../kaspersky-hexa-ui && npm run storybook)",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "update-colors": "gulp clearColorFolders && gulp updateColors && gulp updatePixsoColors && gulp mergePixsoTokens",
    "check-tokens-change": "gulp checkPixsoNotSwappedTokensChange",
    "check-tokens-change:swapped": "gulp checkPixsoSwappedTokensChange",
    "update-typography": "npx ts-node ./src/typography/write-tokens-to-json.ts && gulp updateTypography"
  },
  "devDependencies": {
    "@kaspersky/dev-tools": "2.32.2",
    "@rollup/plugin-commonjs": "26.0.1",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@types/jest": "27.5.2",
    "@typescript-eslint/parser": "5.12.1",
    "del": "6.0.0",
    "dotenv": "16.0.0",
    "eslint": "7.14.0",
    "gulp": "5.0.1",
    "jest": "27.5.1",
    "rollup": "4.55.1",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-css-only": "4.5.2",
    "rollup-plugin-typescript2": "0.31.2",
    "rollup-plugin-url": "3.0.1",
    "ts-jest": "27.1.5",
    "ts-node": "10.9.2",
    "typescript": "4.5.5"
  },
  "overrides": {
    "es5-ext": "0.10.46"
  }
}
