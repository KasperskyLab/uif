{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["lib", "node_modules"]
}
